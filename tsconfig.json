{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@types": [
        "types",
        "types/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@styles": [
        "styles"
      ],
      "@store/*": [
        "store/*"
      ],
      "@i18n": [
        "i18n"
      ],
      "@providers/*": [
        "providers/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "paths": {
    "@/*": [
      "./*"
    ]
  }
}
